<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

   

<main>
    <%- include('../partials/flash') %> 
<div class="container mt-3">
    <div class="container">
        <div class="container">
    <table>
        <thead>
            <tr>
                <th colspan="5"><%= user.name %>'s Tickets</th>
            </tr>
        </thead>
        <thead>
        <tr>
                <td>Ticket #</td>
                <td colspan="2">Description</td>
                <td>Requested By</td>
                <td>Date Created</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <% tickets.forEach((ticket) => { %>
                    <td><a href="/tickets/<%= ticket.id %>"><%= ticket.id.substring(14,24)  %></a></td>
                    <td colspan="2"><%= ticket.description  %></td>
                    <td><%= ticket.requestedBy  %> - <%= ticket.department  %></td>
                    <td><%= ticket.createdAt.toLocaleString() %></td>
               <% }) %>
                
            </tr>
        </tbody>
    </div>
</div>

</main>


